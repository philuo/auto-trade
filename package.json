{
  "name": "auto-trade",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "bun test tests/api/rest-api.test.ts",
    "test:api": "bun test tests/api/rest-api.test.ts",
    "test:websocket": "bun test tests/websocket/websocket.test.ts",
    "test:integration": "bun test tests/integration/*.test.ts",
    "test:e2e": "bun test tests/integration/e2e-data-flow.test.ts",
    "test:data-mapping": "bun test tests/integration/data-mapping.test.ts",
    "test:all": "bun test tests/api/rest-api.test.ts && bun test tests/websocket/websocket.test.ts && bun test tests/integration/*.test.ts",
    "start": "bun run index.ts",
    "start:pm2": "pm2 start ecosystem.config.js",
    "start:dev": "NODE_ENV=development NO_PM2=1 bun run index.ts",
    "stop": "pm2 stop okx-trading",
    "restart": "pm2 restart okx-trading",
    "delete": "pm2 delete okx-trading",
    "logs": "pm2 logs okx-trading",
    "monit": "pm2 monit",
    "strategy": "bun run src/strategies/spot-dca-grid/run-strategy.ts",
    "strategy:demo": "bun run src/strategies/spot-dca-grid/run-strategy.ts",
    "strategy:demo-mock": "bun run src/strategies/spot-dca-grid/demo.ts"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "openai": "^6.16.0"
  }
}
